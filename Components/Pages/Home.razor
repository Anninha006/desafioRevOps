@page "/"
@using REVOPS.DevChallenge.Context.Entities
@using REVOPS.DevChallenge.Services
@inject IServicoChat _servicoChat

<PageTitle>RevOps Chat Info</PageTitle>

<div class="main-container">
    <div class="page-header">
        <h1>üîç <span class="gradient-text">Informa√ß√µes do Talk</span></h1>
        <p>Inserir o ID da conversa do Umblerito no campo de pesquisa abaixo para reter informa√ß√µes sobre a conversa e contato.</p>
    </div>

    <div class="active-section mb-5">
        <div class="card mb-4 search-card shadow-glow">
            <div class="card-body">
                <form @onsubmit="GetChatInfo">
                    <div class="search-section">
                        <input type="text" 
                               class="form-control" 
                               placeholder="Digite o ID do chat (ex: aPZ-CitJaYbmlVCa)"
                               @bind="chatId" 
                               @bind:event="oninput" />
                        <button type="submit" class="btn btn-primary" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <span>Buscando...</span>
                            }
                            else
                            {
                                <i class="bi bi-search me-2"></i><span>Buscar Chat</span>
                            }
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (somethingBadHappened)
        {
            <div class="alert alert-danger fade-in mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Erro:</strong> @error
            </div>
        }

        @if (chatNotFound)
        {
            <div class="alert alert-warning fade-in mb-4">
                <i class="bi bi-search me-2"></i>
                <strong>Chat n√£o encontrado:</strong> Verifique se o ID est√° correto.
            </div>
        }

        @if (currentChatInfo != null)
        {
            <div class="active-chat-container fade-in">
                <ChatInfoCard Record="currentChatInfo" />
            </div>
        }
    </div>

    <div class="history-section pt-4 border-top border-secondary">
        <ChatHistoryPanel History="searchHistory" OnSelect="SelectFromHistory" />
    </div>
</div>

<style>
    .search-card {
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }
    .active-chat-container {
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }
    .main-container {
        padding-bottom: 5rem;
    }
</style>

@code {
    private string? chatId = null;
    private RegistroDeChat? currentChatInfo = null;
    private List<RegistroDeChat> searchHistory = new();
    private bool somethingBadHappened = false;
    private bool chatNotFound = false;
    private bool isLoading = false;
    private string? error = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadHistory();
    }

    private async Task LoadHistory()
    {
        try
        {
            searchHistory = await _servicoChat.GetHistoryAsync(50);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar hist√≥rico: {ex.Message}");
        }
    }

    private async Task GetChatInfo()
    {
        if (string.IsNullOrWhiteSpace(chatId))
            return;

        isLoading = true;
        chatNotFound = false;
        somethingBadHappened = false;
        error = null;
        currentChatInfo = null;

        try
        {
            var result = await _servicoChat.GetChatInfoAsync(chatId.Trim());

            if (result != null)
            {
                currentChatInfo = result;
                await LoadHistory();
            }
            else
            {
                chatNotFound = true;
            }
        }
        catch (Exception e)
        {
            somethingBadHappened = true;
            error = e.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SelectFromHistory(RegistroDeChat record)
    {
        currentChatInfo = record;
        chatId = record.ChatId;
        chatNotFound = false;
        somethingBadHappened = false;
        error = null;
    }
}
