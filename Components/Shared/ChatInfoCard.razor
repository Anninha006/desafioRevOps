@using System.Text.Json
@using REVOPS.DevChallenge.Context.Entities
@using REVOPS.DevChallenge.Services
@inject IChatInfoService _chatInfoService

<div class="card fade-in">
    <div class="card-body">
        <!-- Contact Header -->
        <div class="d-flex align-items-center gap-3 mb-4">
            <div class="contact-avatar">
                @if (!string.IsNullOrEmpty(Record.ContactProfilePictureUrl))
                {
                    <img src="@Record.ContactProfilePictureUrl" alt="@Record.ContactName" />
                }
                else
                {
                    @GetInitials(Record.ContactName)
                }
            </div>
            <div class="flex-grow-1">
                @if (isEditing)
                {
                    <div class="edit-form fade-in">
                        <div class="mb-2">
                            <label class="form-label small mb-1">Nome</label>
                            <input type="text" class="form-control form-control-sm" @bind="editName" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label small mb-1">Telefone</label>
                            <input type="text" class="form-control form-control-sm" @bind="editPhone" />
                        </div>
                        <div class="d-flex gap-2 mt-2">
                            <button class="btn btn-sm btn-primary" @onclick="SaveContact" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                Salvar
                            </button>
                            <button class="btn btn-sm btn-outline-secondary" @onclick="CancelEdit" disabled="@isSubmitting">Cancelar</button>
                        </div>
                        @if (!string.IsNullOrEmpty(editError))
                        {
                            <div class="text-danger small mt-1">@editError</div>
                        }
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="mb-1" style="font-size: 1.25rem;">@(Record.ContactName ?? "Contato Desconhecido")</h4>
                            <span class="text-secondary">@(Record.ContactPhoneNumber ?? "Sem telefone")</span>
                        </div>
                        <button class="btn btn-sm btn-outline-secondary py-1" @onclick="StartEdit" title="Editar Contato">
                            <i class="bi bi-pencil-square"></i> Editar
                        </button>
                    </div>
                }
            </div>
            <div class="ms-auto text-end">
                @if (Record.IsOpen)
                {
                    <span class="badge badge-open">Aberto</span>
                }
                else
                {
                    <span class="badge badge-closed">Fechado</span>
                }
                @if (Record.IsWaiting)
                {
                    <div class="mt-1">
                        <span class="badge badge-waiting">Aguardando</span>
                    </div>
                }
            </div>
        </div>

        <!-- Waiting Time Alert -->
        @if (Record.IsWaiting && Record.WaitingSinceUTC.HasValue)
        {
            <div class="waiting-indicator mb-4">
                <i class="bi bi-clock-history"></i>
                <div>
                    <small class="text-secondary">Tempo de espera</small>
                    <div class="waiting-time">@FormatWaitingTime(Record.WaitingSinceUTC.Value)</div>
                </div>
            </div>
        }

        <!-- Chat Information Grid -->
        <div class="row g-3">
            <div class="col-md-6">
                <div class="info-row">
                    <span class="info-label">ID do Chat</span>
                    <span class="info-value font-monospace small">@Record.ChatId</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Atendente</span>
                    <span class="info-value">
                        @if (Record.IsAnyAttendantAssigned)
                        {
                            <span class="text-success">âœ“ AtribuÃ­do</span>
                        }
                        else
                        {
                            <span class="text-warning">âœ— Sem Atendente</span>
                        }
                    </span>
                </div>
                @if (!string.IsNullOrEmpty(Record.SectorName))
                {
                    <div class="info-row">
                        <span class="info-label">Setor</span>
                        <span class="info-value">@Record.SectorName</span>
                    </div>
                }
            </div>
            <div class="col-md-6">
                <div class="info-row">
                    <span class="info-label">Mensagens nÃ£o lidas</span>
                    <span class="info-value">
                        @if (Record.TotalUnread > 0)
                        {
                            <span class="badge bg-danger">@Record.TotalUnread</span>
                        }
                        else
                        {
                            <span class="text-muted">0</span>
                        }
                    </span>
                </div>
                @if (Record.TotalAIResponses > 0)
                {
                    <div class="info-row">
                        <span class="info-label">Respostas IA</span>
                        <span class="info-value text-info">@Record.TotalAIResponses</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Record.ChannelName))
                {
                    <div class="info-row">
                        <span class="info-label">Canal</span>
                        <span class="info-value">@Record.ChannelName</span>
                    </div>
                }
            </div>
        </div>

        <!-- Active Bot -->
        @if (!string.IsNullOrEmpty(Record.ActiveBotName))
        {
            <div class="mt-3 p-3 rounded" style="background: rgba(99, 102, 241, 0.05); border: 1px dashed var(--accent);">
                <div class="d-flex align-items-center gap-2">
                    <span style="font-size: 1.2rem;">ðŸ¤–</span>
                    <div>
                        <small class="text-secondary d-block">Bot Ativo</small>
                        <span class="fw-semibold">@Record.ActiveBotName</span>
                        <span class="badge bg-secondary ms-2" style="font-size: 0.6rem;">@Record.ActiveBotStatus</span>
                    </div>
                </div>
            </div>
        }

        <!-- Last Message -->
        @if (!string.IsNullOrEmpty(Record.LastMessageContent))
        {
            <div class="mt-4">
                <small class="info-label d-block mb-2">Ãšltima Mensagem</small>
                <div class="p-3 rounded" style="background: var(--bg-surface); border: 1px solid var(--border);">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <small class="badge @(Record.LastMessageSource == "Contact" ? "badge-waiting" : "badge-open")" style="font-size: 0.6rem;">
                            @(Record.LastMessageSource == "Contact" ? "Contato" : "Atendente")
                        </small>
                        @if (Record.LastMessageAtUTC.HasValue)
                        {
                            <small class="text-muted" style="font-size: 0.7rem;">@Record.LastMessageAtUTC.Value.ToLocalTime().ToString("dd/MM HH:mm")</small>
                        }
                    </div>
                    <p class="mb-0 small" style="color: var(--text-primary); white-space: pre-wrap;">@TruncateMessage(Record.LastMessageContent, 300)</p>
                </div>
            </div>
        }

        <!-- Tags -->
        <div class="row mt-4">
            @if (!string.IsNullOrEmpty(Record.ChatTags))
            {
                <div class="col-md-6">
                    <small class="info-label d-block mb-2">Tags do Chat</small>
                    <div class="d-flex flex-wrap">
                        @foreach (var tag in ParseTags(Record.ChatTags))
                        {
                            <span class="tag">@tag.Emoji @tag.Name</span>
                        }
                    </div>
                </div>
            }
            @if (!string.IsNullOrEmpty(Record.ContactTags))
            {
                <div class="col-md-6">
                    <small class="info-label d-block mb-2">Tags do Contato</small>
                    <div class="d-flex flex-wrap">
                        @foreach (var tag in ParseTags(Record.ContactTags))
                        {
                            <span class="tag" style="background: rgba(236, 72, 153, 0.1); color: var(--pink); border-color: rgba(236, 72, 153, 0.3);">@tag.Emoji @tag.Name</span>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="mt-4 pt-3 d-flex justify-content-between align-items-center" style="border-top: 1px solid var(--border);">
            <small class="text-muted">
                ðŸ“‹ Pesquisado em @Record.SearchedAtUTC.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")
            </small>
            @if (Record.ChatCreatedAtUTC.HasValue)
            {
                <small class="text-muted">
                    Criado em @Record.ChatCreatedAtUTC.Value.ToLocalTime().ToString("dd/MM/yyyy")
                </small>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public required ChatInfoRecord Record { get; set; }

    private bool isEditing = false;
    private bool isSubmitting = false;
    private string editName = "";
    private string editPhone = "";
    private string? editError = null;

    private void StartEdit()
    {
        editName = Record.ContactName ?? "";
        editPhone = Record.ContactPhoneNumber ?? "";
        editError = null;
        isEditing = true;
    }

    private void CancelEdit()
    {
        isEditing = false;
        editError = null;
    }

    private async Task SaveContact()
    {
        if (string.IsNullOrWhiteSpace(editName) || string.IsNullOrWhiteSpace(editPhone))
        {
            editError = "Nome e telefone sÃ£o obrigatÃ³rios.";
            return;
        }

        if (string.IsNullOrEmpty(Record.ContactId))
        {
            editError = "ID do contato nÃ£o encontrado.";
            return;
        }

        isSubmitting = true;
        editError = null;

        try
        {
            var success = await _chatInfoService.UpdateContactAsync(Record.ContactId, editName, editPhone);
            if (success)
            {
                Record.ContactName = editName;
                Record.ContactPhoneNumber = editPhone;
                isEditing = false;
            }
            else
            {
                editError = "Falha ao atualizar no Talk API. Verifique as permissÃµes do seu token.";
            }
        }
        catch (Exception ex)
        {
            editError = $"Erro: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private string GetInitials(string? name)
    {
        if (string.IsNullOrEmpty(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name.Length >= 2 ? name.Substring(0, 2).ToUpper() : name.ToUpper();
    }

    private string FormatWaitingTime(DateTime waitingSince)
    {
        var duration = DateTime.UtcNow - waitingSince;
        if (duration.TotalDays >= 1)
            return $"{(int)duration.TotalDays}d {duration.Hours}h";
        if (duration.TotalHours >= 1)
            return $"{(int)duration.TotalHours}h {duration.Minutes}min";
        return $"{(int)duration.TotalMinutes} min";
    }

    private string TruncateMessage(string message, int maxLength)
    {
        if (string.IsNullOrEmpty(message)) return "";
        if (message.Length <= maxLength) return message;
        return message.Substring(0, maxLength) + "...";
    }

    private List<TagInfo> ParseTags(string? tagsJson)
    {
        if (string.IsNullOrEmpty(tagsJson)) return new();
        try
        {
            return JsonSerializer.Deserialize<List<TagInfo>>(tagsJson) ?? new();
        }
        catch
        {
            return new();
        }
    }

    private class TagInfo
    {
        public string? Name { get; set; }
        public string? Emoji { get; set; }
        public string? Color { get; set; }
    }
}
